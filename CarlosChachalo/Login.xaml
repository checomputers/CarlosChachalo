<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarlosChachalo.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="uisrael"/>
            <Image Source="=https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            
            <Label Text="LOGIN DE REGISTRO" VerticalOptions="CenterAndExpand" 
                   FontSize="25" TextColor="Black"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>

            <Entry x:Name="txtContrasena" Placeholder="Ingrese su contrasena" 
                   IsPassword="True"/>

            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked" BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>